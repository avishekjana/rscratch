:javascript
  $(document).ready(function(){
    $('ul.tabs').tabs();
  });

.row
  .col.s4.p0.fixed-sidebar.z-depth-1
    %ul.tabs.light-blue
      %li.tab.col.s6
        %a.white-text.waves-effect.waves-light.active{:href => "#test1"} New
      %li.tab.col.s6
        %a.white-text.waves-effect.waves-light{:href => "#test2"} Resolved
    #test1.p0
      =# smart_listing_controls_for(:exceptions, {class: "form-inline text-right"}) do
      =# text_field_tag :filter, '', class: "search form-control", placeholder: "Search...", autocomplete: :off    
      = smart_listing_render :exceptions
    #test2.p0 Under development

  .col.s8.p0{:style=>"float:right"}
    .row.p10.margin-0
      %span.font-20.exception-message.font-weight-300
      %span.right.font-11.exception-date
    .row.exception-summary
      .col.s8
        .card.z-depth-1
          .card-panel{:style=>"min-height:280px !important"}
            .progress-loader
            
      .col.s4
        .card.z-depth-2
          .card-content.white-text.indigo.border-radius-0
            .card-title.font-34.exception-total-count
          .card-action.indigo.darken-1.white-text.p10.font-weight-300
            Total occurances
        .card.z-depth-2
          .card-content.white-text.teal.border-radius-0
            .card-title.font-34.exception-new-count
          .card-action.teal.darken-1.white-text.p10.font-weight-300
            Occurances since last resolved.
    .exception-container.progress-loader
      .valign-wrappe
        %h5.grey-text.font-weight-300.center-align.text-lighten-2 No exception selected
